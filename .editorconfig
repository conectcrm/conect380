# https://editorconfig.org

root = true

# ==================================================
# ğŸŒ PadrÃ£o para todos os arquivos
# ==================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ==================================================
# ğŸ“œ JavaScript/TypeScript
# ==================================================
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
max_line_length = 100

# ==================================================
# ğŸ“„ JSON
# ==================================================
[*.json]
indent_size = 2
insert_final_newline = false

# ==================================================
# ğŸ“¦ Package files (nÃ£o formatar)
# ==================================================
[package-lock.json]
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false

[yarn.lock]
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false

# ==================================================
# ğŸ¨ CSS/SCSS
# ==================================================
[*.{css,scss,sass}]
indent_size = 2

# ==================================================
# ğŸ“ Markdown
# ==================================================
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# ==================================================
# ğŸ—„ï¸ SQL
# ==================================================
[*.sql]
indent_size = 2

# ==================================================
# ğŸ³ Docker
# ==================================================
[Dockerfile*]
indent_size = 2

[docker-compose*.yml]
indent_size = 2

# ==================================================
# ğŸªŸ Windows Scripts
# ==================================================
[*.{bat,cmd,ps1}]
end_of_line = crlf

# ==================================================
# ğŸ“‹ YAML
# ==================================================
[*.{yml,yaml}]
indent_size = 2

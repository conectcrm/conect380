  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main.js",
    "start:api": "powershell -Command \"$env:APP_PORT=3001; nest start\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:js-residual": "node -e \"const fs=require('fs');const path=require('path');let has=false;function scan(d){for(const f of fs.readdirSync(d)){const p=path.join(d,f);const st=fs.statSync(p);if(st.isDirectory()) scan(p); else if(p.endsWith('.js')){has=true;console.log('Residual JS encontrado:',p);}}}scan('src'); if(has){console.error('Falha: remover .js residuais de src');process.exit(1);}else{console.log('OK: sem .js residuais');}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "typeorm migration:generate -d ormconfig.js",
    "migration:create": "typeorm migration:create",
    "migration:run": "typeorm migration:run -d ormconfig.js",
    "migration:revert": "typeorm migration:revert -d ormconfig.js",
    "schema:sync": "typeorm schema:sync -d ormconfig.js",
    "schema:drop": "typeorm schema:drop -d ormconfig.js"
  },

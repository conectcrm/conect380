{
  "name": "conect-crm-backend",
  "version": "1.0.0",
  "description": "Backend do Conect CRM - Sistema CRM completo e escal√°vel",
  "author": "Conect CRM Team",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:dev:nest": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main.js",
    "start:api": "powershell -Command \"$env:APP_PORT=3001; nest start\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings 0",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "type-check": "tsc --noEmit",
    "validate:multi-tenant": "powershell -File ../scripts/ci/multitenant-guardrails.ps1",
    "validate:permissions-governance": "jest --runInBand common/permissions/permissions.governance.spec.ts",
    "apply:rls": "powershell -File ../scripts/ci/apply-rls-baseline.ps1",
    "validate:rls": "powershell -File ../scripts/ci/rls-coverage-check.ps1",
    "validate:lint-budget": "powershell -File ../scripts/ci/lint-budget-check.ps1",
    "update:lint-budget": "powershell -File ../scripts/ci/update-lint-budget.ps1",
    "benchmark:dashboard-v2": "node scripts/benchmark-dashboard-v2.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand --forceExit",
    "test:e2e:critical": "jest --config ./test/jest-e2e.json --runInBand --testPathPattern=test/critical/.*\\.e2e-spec\\.ts$",
    "test:e2e:cotacao": "jest --config ./test/jest-e2e.json --runInBand ./cotacao/cotacao-gerar-conta-pagar.e2e-spec.ts",
    "test:e2e:cotacao:local": "powershell -Command \"$env:DATABASE_HOST='localhost'; $env:DATABASE_PORT='5433'; $env:DATABASE_USERNAME='postgres'; $env:DATABASE_PASSWORD='postgres'; $env:DATABASE_NAME='conectcrm'; npm run test:e2e:cotacao\"",
    "test:e2e:contas-pagar": "jest --config ./test/jest-e2e.json --runInBand ./financeiro/contas-pagar.e2e-spec.ts",
    "test:e2e:contas-pagar:local": "powershell -Command \"$env:DATABASE_HOST='localhost'; $env:DATABASE_PORT='5433'; $env:DATABASE_USERNAME='postgres'; $env:DATABASE_PASSWORD='postgres'; $env:DATABASE_NAME='conectcrm'; npm run test:e2e:contas-pagar\"",
    "test:e2e:vendas": "jest --config ./test/jest-e2e.json --runInBand --forceExit ./propostas/portal-token-core.e2e-spec.ts ./propostas/contratos-fluxo.e2e-spec.ts ./propostas/faturamento-pagamentos-gateway.e2e-spec.ts",
    "test:e2e:vendas:permissoes": "jest --config ./test/jest-e2e.json --runInBand --forceExit ./permissoes/perfis-acesso-vendas.e2e-spec.ts",
    "migration:generate": "typeorm migration:generate -d ormconfig.js",
    "migration:create": "typeorm migration:create",
    "migration:run": "typeorm migration:run -d ormconfig.js -t each",
    "migration:show": "typeorm migration:show -d ormconfig.js",
    "migration:revert": "typeorm migration:revert -d ormconfig.js",
    "schema:sync": "typeorm schema:sync -d ormconfig.js",
    "schema:drop": "typeorm schema:drop -d ormconfig.js",
    "seed:fluxo-padrao": "node ensure-fluxo-padrao-whatsapp.js"
  },

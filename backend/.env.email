# ============================================
# SERVIDOR DE E-MAIL - CONECTCRM BACKEND
# ============================================

# Porta do servidor de e-mail
EMAIL_SERVER_PORT=3001

# ========== GMAIL SMTP ==========
# Configure sua conta do Gmail
GMAIL_USER=seu-email@gmail.com
GMAIL_PASSWORD=sua-senha-de-app-aqui

# ========== SENDGRID ==========
# Configure sua conta do SendGrid
SENDGRID_API_KEY=SG.sua-api-key-aqui
SENDGRID_FROM_EMAIL=contato@conectcrm.com

# ========== AWS SES ==========
# Configure suas credenciais AWS
AWS_ACCESS_KEY_ID=sua-access-key
AWS_SECRET_ACCESS_KEY=sua-secret-key
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=contato@conectcrm.com

# ========== CONFIGURAÇÕES GERAIS ==========
# E-mail remetente padrão
DEFAULT_FROM_EMAIL=contato@conectcrm.com
DEFAULT_FROM_NAME=ConectCRM

# Debug e logs
EMAIL_DEBUG=true
EMAIL_LOG_LEVEL=info

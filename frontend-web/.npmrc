# Configurações do NPM para o Fênix CRM Frontend
# Evita instalação automática de peer dependencies
auto-install-peers=false

# Usa legacy peer deps por padrão (evita conflitos de versão)
legacy-peer-deps=true

# Registra o exact version por padrão (evita range de versões)
save-exact=true

# Engine strict (força usar versões específicas do Node/NPM)
engine-strict=true

# Audit level (apenas vulnerabilidades high e critical)
audit-level=high

# Força verificação de integridade
package-lock=true

# Timeout para downloads (evita travamentos)
fetch-timeout=300000
registry-timeout=300000

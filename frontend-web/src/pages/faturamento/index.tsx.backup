            <FileText className="h-16 w-16 text-gray-300 mx-auto mb-4" />
            <h3 className="text-lg font-medium text-gray-900 mb-2">
              Formulário de Fatura
            </h3>
            <p className="text-gray-600 mb-6">
              Interface para criação e edição de faturas será implementada aqui.
            </p>
            <Button variant="outline">
              Implementar Formulário
            </Button>
          </div>
        </CardContent>
      </Card>
    </div>
  );

  const renderRelatorios = () => (
    <div className="space-y-6">
      <Card>
        <CardHeader>
          <CardTitle>Relatórios de Faturamento</CardTitle>
        </CardHeader>
        <CardContent>
          <div className="text-center py-12">
            <FileText className="h-16 w-16 text-gray-300 mx-auto mb-4" />
            <h3 className="text-lg font-medium text-gray-900 mb-2">
              Relatórios e Analytics
            </h3>
            <p className="text-gray-600 mb-6">
              Dashboards e relatórios detalhados de faturamento serão implementados aqui.
            </p>
            <Button variant="outline">
              Ver Relatórios
            </Button>
          </div>
        </CardContent>
      </Card>
    </div>
  );

  const renderContent = () => {
    switch (currentView) {
      case 'criar':
        return renderCriarFatura();
      case 'detalhes':
        return renderDetalhesFatura();
      case 'relatorios':
        return renderRelatorios();
      default:
        return (
          <>
            {renderResumoCards()}
            {renderListaFaturas()}
          </>
        );
    }
  };

  return (
    <div className="min-h-screen bg-gray-50">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {/* Header */}
        <div className="mb-8">
          <div className="flex items-center justify-between mb-6">
            <div>
              <h1 className="text-2xl font-bold text-gray-900">Faturamento</h1>
              <p className="text-gray-600">Gerencie todas as suas faturas e cobranças</p>
            </div>
            <div className="flex items-center gap-2">
              <Button
                variant={currentView === 'relatorios' ? 'default' : 'outline'}
                size="sm"
                onClick={() => setCurrentView('relatorios')}
              >
                <FileText className="h-4 w-4 mr-2" />
                Relatórios
              </Button>
            </div>
          </div>

          {/* Navigation Tabs */}
          {currentView === 'lista' && (
            <div className="border-b border-gray-200">
              <nav className="-mb-px flex space-x-8">
                <button
                  className="py-2 px-1 border-b-2 border-blue-500 font-medium text-sm text-blue-600"
                >
                  Todas as Faturas
                </button>
              </nav>
            </div>
          )}
        </div>

        {/* Content */}
        {renderContent()}
      </div>
    </div>
  );
};

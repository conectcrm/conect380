  "scripts": {
    "start": "set PORT=3000 && set NODE_OPTIONS=--max_old_space_size=4096 && craco start",
    "start:network": "set PORT=3000 && set HOST=0.0.0.0 && set NODE_OPTIONS=--max_old_space_size=4096 && set REACT_APP_API_URL=http://172.23.192.1:3001 && set REACT_APP_WS_URL=ws://172.23.192.1:3001 && craco start",
    "start:low-memory": "set PORT=3000 && set NODE_OPTIONS=--max_old_space_size=2048 && craco start",
    "build": "set DISABLE_ESLINT_PLUGIN=true && craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "serve": "node server.js",
    "start:craco": "set PORT=3000 && craco start",
    "start:docker": "craco start",
    "create-modal": "node ../scripts/create-modal.js",
    "deps:check": "node ../scripts/check-dependencies.js",
    "deps:audit": "npm audit --audit-level high",
    "deps:unused": "npx depcheck",
    "deps:update": "npm outdated",
    "deps:clean": "npm cache clean --force && npm ci",
    "health-check": "npm run deps:check && npm run deps:audit",
    "preinstall": "npm run deps:check || echo 'Aviso: Verificação de dependências falhou'",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,scss,md}\"",
    "quality": "npm run lint && npm run type-check"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
